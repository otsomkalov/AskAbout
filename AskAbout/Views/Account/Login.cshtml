@model LoginViewModel
@inject SignInManager<User>
    SignInManager
@inject IViewLocalizer Localizer

@{
        ViewData["Title"] = Localizer["Title"];
}

<h2>@ViewData["Title"].</h2>
<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal"></form>
<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui black image header">
            <img src="~/img/logo.png" class="image">
            <div class="content">
                Войдите в свой аккаунт
            </div>
        </h2>
        <form class="ui large form" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input asp-for="Login" placeholder="@Localizer["Login"]">
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Password" placeholder="@Localizer["Password"]">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="field">
                    <div class=" left icon input">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RememberMe" />
                                @Localizer["RememberMe"]
                            </label>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class=" left icon input">
                        <button type="submit" class="ui fluid large black submit button">@ViewData["Title"]</button>
                    </div>
                </div>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@Localizer["Register"] </a>
                </p>
                <p>
                    <a asp-action="ForgotPassword">@Localizer["Forgot"]</a>
                </p>
            </div>
        </form>
    </div>
</div>
